name 'libtirpc'
org 'amylum'

licenses 'COPYING'

deps(
  krb5: {
    version: '1.16.1-1',
    checksum: '4538754807eedb74cdde85e804142226ba577e346dd48768e1a824720eb3a412'
  },
  openssl: {
    version: '1.1.0i-2',
    checksum: 'bdfcd530e741ab1e20e3996463847a851e7ecdb509b7cb227218fb6e96eb0cac'
  },
  'linux-api-headers': {
    version: '4.18-1',
    checksum: 'edc8dab0e57cb3868867a86d501eb5f314ad00d87e50957c3ffae113ce967298'
  }
)

configure_flags(
  prefix: '/usr'
)

cflags
harden

patch 'Use-netbsd-queue.h.patch'
patch 'remove-des-functionality.patch'
patch 'types.patch'

build do
  run 'autoreconf -i'
  configure
  make
  install
end

