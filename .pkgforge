name 'libtirpc'
org 'amylum'

licenses 'COPYING'

deps(
  krb5: {
    version: '1.16-1',
    checksum: '1fd4902c10e07c246698986886ffe7ad287edde9eea45f336fbd4653dd873a28'
  },
  openssl: {
    version: '1.1.0h-1',
    checksum: 'c05e026a0e376cc4f5bb1dc1718fab436152e4cc35f02a378a8b85a28764572a'
  },
  'linux-api-headers': {
    version: '4.15-2',
    checksum: 'dbfe68e7620b09fe2996d83fe4ae738dddb2486885b9d5ef3dc27ae77d7585ba'
  }
)

configure_flags(
  prefix: '/usr'
)

cflags
harden

patch 'Use-netbsd-queue.h.patch'
patch 'remove-des-functionality.patch'
patch 'types.patch'

build do
  run 'autoreconf -i'
  configure
  make
  install
end

