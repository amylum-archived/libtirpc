name 'libtirpc'
org 'amylum'

licenses 'COPYING'

deps(
  krb5: '1.15.1-1',
  openssl: '1.0.2l-1',
  'linux-api-headers': '4.11-4'
)

configure_flags(
  prefix: '/usr'
)

cflags
harden

patch 'Use-netbsd-queue.h.patch'
patch 'add_missing_rwlock_unlocks_in_xprt_register.patch'
patch 'libtirpc-0.2.1-fortify.patch'
patch 'remove-des-functionality.patch'

build do
  run 'autoreconf -i'
  configure
  make
  install
end

test do
  # TODO: add tests
end
