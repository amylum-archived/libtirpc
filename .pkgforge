name 'libtirpc'
org 'amylum'

licenses 'COPYING'

deps(
  krb5: {
    version: '1.16-1',
    checksum: '1fd4902c10e07c246698986886ffe7ad287edde9eea45f336fbd4653dd873a28'
  },
  openssl: {
    version: '1.1.0h-2',
    checksum: 'c56e167c5836f9445472b723b5f7b15f3eff19e0d312b4046852605b0706b7c7'
  },
  'linux-api-headers': {
    version: '4.16-1',
    checksum: '55af258de8663de5ec97db875651eaeecc209b47454dbbf27757d4de595e618d'
  }
)

configure_flags(
  prefix: '/usr'
)

cflags
harden

patch 'Use-netbsd-queue.h.patch'
patch 'remove-des-functionality.patch'
patch 'types.patch'

build do
  run 'autoreconf -i'
  configure
  make
  install
end

