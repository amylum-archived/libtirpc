    version: '4.19-1',
    checksum: 'de68cab17c2354ee660b269ccca30e275a9314563ebdfb4f427fc5ebe1395f30'
  }
)

configure_flags(
  prefix: '/usr'
)

cflags
harden

patch 'Use-netbsd-queue.h.patch'
patch 'remove-des-functionality.patch'
