name 'libtirpc'
org 'amylum'

licenses 'COPYING'

deps(
  krb5: {
    version: '1.16.1-1',
    checksum: '4538754807eedb74cdde85e804142226ba577e346dd48768e1a824720eb3a412'
  },
  openssl: {
